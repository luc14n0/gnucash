FROM opensuse/amd64:tumbleweed
run zypper in -lyq --no-recommends boost-devel cmake gcc-c++ gmock gtest intltool libboost_date_time-devel libboost_filesystem-devel libboost_locale-devel libboost_regex-devel libdbi-drivers-dbd-sqlite3 ninja python-devel aqbanking dbi gtk3-devel glib2-devel guile-devel gwenhywfar libicu-devel ktoblzcheck libofx libxml-2.0 libxslt webkit2gtk-4.0 > /dev/null
copy tumbleweed-testscript afterfailure commonbuild /
run chmod +x /tumbleweed-testscript /afterfailure /commonbuild
entrypoint /tumbleweed-testscript
